//	Test script for ObjectTalk instructions

var integer = 1;
var real = 1.1;
var string = "test";
assert(integer == 1 && real == 1.1 && string == "test");

var flag1;
var flag2;
var flag3;

if integer == 1 { flag1 = true; } else { flag1 = false; }
if (integer == 2) { flag2 = true; } else { flag2 = false; }

if (integer == 3) {
	flag3 = true;

} else {
	flag3 = false;
}

assert(flag1 && !flag2 && !flag3);

var c = 0;
var test = 0;

while c < 10 {
	test++;
	c++;
}

assert(test == 10);

while test > 0 {
	test--;
}

assert(test == 0);

do {
	test += 2;
	test -= 2;
	test += 2;
} while test < 10;

assert(test == 10);

for value in [ 1, 0, 3, 4, 2 ] {
	if value == 1 { test += 1; }
	elif value == 2 { test += 2; }
	elif value == 3 { test += 3; }
	elif value == 4 { test += 4; }
	elif value == 5 { test += 5; }
	else { test += 10; }
}

assert(test == 30);

var result = 0;

for value in [ 1, 2, 3, 4 ] {
	result += value;
}

assert(result == 10);

result = 0;

for value in range(4) {
	result += value;
}

assert(result == 10);

result = 0;

for value in range(3, 5) {
	result += value;
}

assert(result == 12);

result = 0;

for value in range(0, 10, 2) {
	result += value;
}

assert(result == 30);

result = 0;

for value in range(10, 6, -2) {
	result += value;
}

assert(result == 24);
